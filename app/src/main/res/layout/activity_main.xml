<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.bucketdrops.MainActivity">



    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <com.example.jonathan.bucketdrops.widgets.BucketRecyclerView
        android:id="@+id/rv_drops"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"></com.example.jonathan.bucketdrops.widgets.BucketRecyclerView>

    <include android:id="@+id/empty_drop" layout="@layout/empty_drop"/>

</RelativeLayout>
